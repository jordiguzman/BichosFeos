<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imagenes_moscas"
    android:elevation="6dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_img_mosca_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_img_mosca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="50sp"
        android:text="@string/frag_imag_moscas"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_img_mosca2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="50sp"
        android:textStyle="italic"
        android:text="@string/frag_imag_moscas2"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_below="@+id/tv_img_mosca"
        android:layout_alignParentStart="true" />


</RelativeLayout>