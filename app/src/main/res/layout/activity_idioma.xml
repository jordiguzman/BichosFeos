<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_menu_idioma_por"
    android:orientation="vertical"
    android:weightSum="6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="appkite.jordiguzman.com.bichosfeos.Idioma">

    <fragment
        android:id="@+id/fragment_img"
        class="appkite.jordiguzman.com.bichosfeos.fragments.fragment_idioma.Frag_espanol"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        tools:layout="@layout/frag_espanol" />

    <fragment
        android:id="@+id/fragment_inf"
        class="appkite.jordiguzman.com.bichosfeos.fragments.fragment_idioma.Frag_ingles"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        tools:layout="@layout/frag_ingles" />





</LinearLayout>
