<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".touchImageView.ui.mantis.MantisPager"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_wiki"
            android:background="@mipmap/ic_wikipedia"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bajar"
            android:background="@mipmap/ic_bajar"
            android:autoLink="web" />
        <Button
            android:id="@+id/btn_help"
            android:background="@mipmap/ic_help"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <appkite.jordiguzman.com.bichosfeos.touchImageView.ExtendedViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_weight="0.99" >

    </appkite.jordiguzman.com.bichosfeos.touchImageView.ExtendedViewPager>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_weight="0.02">
    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/tv_mantis"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp" />
</LinearLayout>


</LinearLayout>
