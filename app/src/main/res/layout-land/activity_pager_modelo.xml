<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".touchImageView.ui.mantis.MantisPager"
    android:weightSum="1">


    <Button
        android:id="@+id/btn_wiki"
        android:background="@mipmap/ic_wikipedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minWidth="48dip"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bajar"
        android:background="@mipmap/ic_bajar"
        android:autoLink="web"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_help"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_help"
        android:layout_marginLeft="4dp" />

    <Button
        android:id="@+id/btn_help"
        android:background="@mipmap/ic_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="96dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:minWidth="48dip"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_wiki"
        android:layout_marginLeft="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_wiki" />


    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/tv_mantis"
        android:layout_width="0dp"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_bajar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="20dp"
        app:layout_constraintHorizontal_bias="0.52" />

    <appkite.jordiguzman.com.bichosfeos.touchImageView.ExtendedViewPager
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="255dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="168dp"
        tools:layout_conversion_absoluteWidth="683dp"
        tools:layout_conversion_absoluteHeight="290dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mantis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </appkite.jordiguzman.com.bichosfeos.touchImageView.ExtendedViewPager>


</android.support.constraint.ConstraintLayout>
